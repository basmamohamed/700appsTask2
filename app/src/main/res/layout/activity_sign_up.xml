<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/bk_signup"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textColor="#000"
        android:textSize="30sp" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We are glad we can help you"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to join us as"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp"
        android:textColor="#000"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/sign_up_border"
        android:text="Member?"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:onClick="goToSignUp2"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <View
            android:layout_width="0dp"
            android:layout_marginTop="13dp"
            android:layout_weight="2"
            android:layout_height="1dp"
            android:background="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="#fff"
            android:textSize="20sp"/>
        <View
            android:layout_width="0dp"
            android:layout_marginTop="13dp"
            android:layout_weight="2"
            android:layout_height="1dp"
            android:background="#fff"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/sign_in_border"
        android:text="Doctor?"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:onClick="goToSignUp2"/>


</LinearLayout>