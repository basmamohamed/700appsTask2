<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bk_pic">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_facebook"
            android:textColor="#000"
            android:text="Facebook" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_linkedin"
            android:singleLine="true"
            android:textColor="#000"
            android:text="Linked in"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#009589"
        android:layout_marginBottom="8dp">
        <View
            android:layout_width="0dp"
            android:layout_marginTop="13dp"
            android:layout_weight="2"
            android:layout_height="1dp"
            android:background="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="#fff"
            android:textSize="15sp"/>
        <View
            android:layout_width="0dp"
            android:layout_marginTop="13dp"
            android:layout_weight="2"
            android:layout_height="1dp"
            android:background="#fff"/>
    </LinearLayout>
    <EditText
        android:id="@+id/emailEdit"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_border"
        android:hint="Email"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_email"/>

    <EditText
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_border"
        android:hint="Password"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_password"
        android:layout_marginTop="8dp"/>
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/remember_me"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:drawableLeft="@drawable/ic_remember_unselect"
            android:textColor="#000"
            android:drawablePadding="3dp"
            android:onClick="rememberMe"/>
        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textColor="#000"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/emailInvalid"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fe0000"
        android:text="Your email seems to be invalid, try again"/>
        <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">



            <TextView
                android:onClick="signin"
                android:id="@+id/signInButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/sign_in_border"
                android:gravity="center"
                android:text="Sign In"
                android:textColor="#fff"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>